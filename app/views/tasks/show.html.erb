<h1>id: <%= @task.id %>のタスク詳細</h1>


<table class="table table-bordered">
    <tr>
        <th class="col-xs-2">id</th>
        <td class="col-xs-2"><%= @task.id %></td>
    </tr>
    <tr>
        <th>task</th>
        <td><%= @task.content %></td>
    </tr>
    <tr>
        <th>status</th>
        <td><%= @task.status %></td>
    </tr>
    
</table>

<%= link_to 'edit', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'delete', @task, method: :delete, data: { confirm: '削除OK？'}, class: 'btn btn-danger' %>